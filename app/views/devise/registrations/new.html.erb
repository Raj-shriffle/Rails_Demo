<style>
  .label_size
  {
    width: 1170px;
  }
</style>
<section class="vh-50">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12" >
              <h2 class="text-uppercase text-center ">Create an account</h2>

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

                <div class="form-outline mb-4">
                  <%= f.label :name, :class=>'form-control form-control-lg' %><br />
                   <%= f.text_field :name, autofocus: true, :class=>"form-label label_size" %>
                </div>
                </br>

                <div class="form-outline mb-4">
                  <%= f.label :age, :class=>'form-control form-control-lg' %><br />
                  <%= f.text_field :age, autofocus: true, :class=>"form-label label_size" %>
                </div>
                </br>

                <div class="form-outline mb-4">
                  <%= f.label :gender, :class=>'form-control form-control-lg' %><br />
                  <%= f.text_field :gender, autofocus: true, :class=>"form-label label_size" %>
                </div>
                </br>

                <div class="form-outline mb-4">
                  <%= f.label :mobile_no, :class=>'form-control form-control-lg' %><br />
                  <%= f.text_field :mobile_no, autofocus: true, :class=>"form-label label_size" %>
                </div>
                </br>

                <div class="form-outline mb-4">
                  <%= f.label :email, :class=>'form-control form-control-lg' %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", :class=>"form-label label_size" %>
                </div>
                </br>

                <div class="form-outline mb-4">
                  <%= f.label :password,:class=>"form-control form-control-lg" %>
                  <% if @minimum_password_length %>
                   <em>(<%= @minimum_password_length %> characters minimum)</em>
                   <% end %><br />
                  <%= f.password_field :password, autocomplete: "new-password label_size" %>
                </div>

                <div class="field">
                    <%= f.label :password_confirmation %><br />
                    <%= f.password_field :password_confirmation, autocomplete: "new-password label_size" %>
                </div>
                </br>

                <div class="d-flex justify-content-center">
                    <div class="actions">
                      <%= f.submit "Sign up", :class=>"btn btn-success btn-block btn-lg gradient-custom-4 text-body" %>
                    </div>
                </div>
                </br>
                <% end %>
                <p class="text-center text-muted mt-5 mb-0">Have already an account? 
                  <a href="#!"class="fw-bold text-body"><u><%= render "devise/shared/links" %></u></a>
                </p>
        </div>
      </div>
    </div>
</section>
